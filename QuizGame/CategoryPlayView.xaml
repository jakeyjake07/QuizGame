<UserControl x:Class="QuizGame.CategoryPlayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizGame"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Play by Category" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Select one or more categories to play questions from ALL quizzes:" FontSize="16" Margin="0,0,0,10" TextWrapping="Wrap" TextAlignment="Center"/>

            <ScrollViewer Height="200" Width="300" Margin="0,0,0,20">
                <StackPanel x:Name="CategoriesPanel"/>
            </ScrollViewer>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Play Selected Categories" Click="PlayCategories_Click" Padding="15,5" Margin="0,0,10,0"/>
                <Button Content="Select All" Click="SelectAll_Click" Padding="15,5" Margin="0,0,10,0"/>
                <Button Content="Deselect All" Click="DeselectAll_Click" Padding="15,5" Margin="0,0,10,0"/>
                <Button Content="Back to Menu" Click="Back_Click" Padding="15,5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>