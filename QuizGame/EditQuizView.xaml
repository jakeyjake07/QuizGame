<UserControl x:Class="QuizGame.EditQuizView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizGame"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="{Binding CurrentQuiz.Title}" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Questions: " FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>

            <ListView ItemsSource="{Binding CurrentQuiz.Questions}" SelectedItem="{Binding SelectedQuestion}" Height="250">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding Statement}" FontWeight="Bold" TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding Answers[0]}" Foreground="Green" Margin="10,2,0,0"/>
                            <TextBlock Text="{Binding Answers[1]}" Margin="10,2,0,0"/>
                            <TextBlock Text="{Binding Answers[2]}" Margin="10,2,0,0"/>
                            <TextBlock Text="{Binding Answers[3]}" Margin="10,2,0,0"/>
                            
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Edit Selected" Click="EditButton_Click" Padding="10,5" Margin="0,0,10,0"/>
                <Button Content="Delete Selected" Click="DeleteButton_Click" Padding="10,5"/>

            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <TextBlock Text="Edit Question:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Question:" FontWeight="Bold"/>
            <TextBox Text="{Binding EditStatement}" Margin="0,5,0,10" Padding="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
            <TextBlock Text="Category:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox Text="{Binding EditCategory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Answers:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox Text="{Binding EditAnswers[0]}" Margin="0,0,0,5" Padding="5" Tag="Answer 1"/>
            <TextBox Text="{Binding EditAnswers[1]}" Margin="0,0,0,5" Padding="5" Tag="Answer 2"/>
            <TextBox Text="{Binding EditAnswers[2]}" Margin="0,0,0,5" Padding="5" Tag="Answer 3"/>
            <TextBox Text="{Binding EditAnswers[3]}" Margin="0,0,0,5" Padding="5" Tag="Answer 4"/>

            <TextBlock Text="Correct Answer: " FontWeight="Bold"/>
            <ComboBox SelectedIndex="{Binding EditCorrectAnswerIndex}" Margin="0,5,0,10">
                <ComboBoxItem Content="First Answer"/>
                <ComboBoxItem Content="Second Answer"/>
                <ComboBoxItem Content="Third Answer"/>
                <ComboBoxItem Content="Fourth Answer"/>
            </ComboBox>

            <Button Content="Update Question" Click="UpdateButton_Click" Padding="10,5" Margin="0,0,0,10"/>
            <Button Content="Save Quiz" Click="SaveButton_Click" Padding="10,5" Margin="0,0,0,10"/>
            <Button Content="Back to Menu" Click="BackButton_Click" Padding="10,5"/>

        </StackPanel>
        
        
        
    </Grid>
</UserControl>
